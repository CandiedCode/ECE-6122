{
    "tasks": [
        {
            "label": "Conan Install",
            "type": "shell",
            "command": "conan",
            "args": [
                "install",
                ".",
                "--build=missing",
                "--output-folder=build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Install Conan dependencies"
        },
        {
            "type": "shell",
            "label": "configure",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/build/build/generators/conan_toolchain.cmake",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "build",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": ["conan install", "configure"],
            "problemMatcher": [
                "$gcc"
            ]
        }

    ],
    "version": "2.0.0"
}