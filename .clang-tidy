---
# Clang-tidy configuration for C++17 with modern best practices
Checks: >
  -*,
  clang-analyzer-*,
  bugprone-*,
  performance-*,
  modernize-*,
  readability-*,
  cppcoreguidelines-*,
  -bugprone-easily-swappable-parameters,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -readability-magic-numbers,
WarningsAsErrors: ''

HeaderFilterRegex: '^(?!.*SFML/)'

FormatStyle: none

CheckOptions:
  # C++ 17 specific: Prefer std::optional over pointers/magic values
  - key: modernize-use-optional.UseBoolean
    value: '1'

  # C++ 17 specific: Encourage structured bindings for cleaner code
  - key: modernize-return-braced-init-list.ReturnType
    value: 'auto'

  # Prefer modern C++ constructs
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'

  - key: modernize-use-using.IgnoreMacros
    value: '1'

  # Encourage defaulted special members where possible
  - key: modernize-use-equals-default.IgnoreMacros
    value: '1'

  # Allow structured bindings without warnings
  - key: readability-qualified-auto.IgnoreAutoInParameters
    value: '1'

  # C++ 17 specific: Encourage constexpr where possible
  - key: modernize-use-constexpr.MinLengthOfEnclosingFunction
    value: '5'

  # Avoid std::bind in favor of lambdas (C++17 friendly)
  - key: modernize-avoid-bind.PermissiveParameterList
    value: '0'

  # C++ 17: Prefer std::transparent_functors for generic programming
  - key: modernize-use-transparent-functors.SafeMode
    value: '0'

  - key: readability-identifier-length.IgnoredVariableNames
    value: 'a|b|c|oc|t|t1|t2|u|x|y'
